<h1>Course</h1>

{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action actions">
                        <a href="/courses/{{id}}" target="_blank">Open course</a>
                        <!--получение данных из корневого элемента-->
                        {{#if @root.isAuth}}
                            <!--собственный хелпер для сравнения-->
                            {{#ifequals userId._id @root.userId}}
                                <a href="/courses/{{id}}/edit?allow=true">Edit</a>
                            {{/ifequals}}
                            <form action="/cart/add" method="POST">
                                <input type="hidden" name="id" value="{{id}}">
                                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                <button type="submit" class="btn btn-primary">Buy</button>
                            </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Courses not found</p>
{{/if}}