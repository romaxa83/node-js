<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>

            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h2>Login in a system</h2>
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter the email"></span>
                </div>
                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter the password"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <p><a href="/auth/reset">Reset password</a></p>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h2>Register in a system</h2>
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <form action="/auth/register" method="POST" novalidate>
                <div class="input-field">
                    <input id="reg-email" name="email" type="email" class="validate" required>
                    <label for="reg-email">Email</label>
                    <span class="helper-text" data-error="Enter the email"></span>
                </div>
                <div class="input-field">
                    <input id="reg-name" name="name" type="text" class="validate" required>
                    <label for="reg-name">Name</label>
                    <span class="helper-text" data-error="Enter the name"></span>
                </div>
                <div class="input-field">
                    <input id="req-password" name="password" type="password" class="validate" required>
                    <label for="req-password">Password</label>
                    <span class="helper-text" data-error="Enter the password"></span>
                </div>
                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">Confirm password</label>
                    <span class="helper-text" data-error="Enter the confirm password"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>